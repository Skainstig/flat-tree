{
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": ".",
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "module": "ES6",
    "target": "esnext",
    "lib": ["ES6"],
    "outDir": "./dist/",
    "skipLibCheck": true,
    "keyofStringsOnly": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "moduleResolution": "Node"
  },
  "types": [
    "chrome"
  ],
  "typeAcquisition": {
    "enable": false
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src"
  ]
}